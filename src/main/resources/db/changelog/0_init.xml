<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="profiles" author="dzaitsev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="profiles"/>
            </not>
        </preConditions>
        <createTable tableName="profiles">
            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="profilePK"/>
            </column>
            <column name="profile_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="date_create" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="product_name" type="varchar(255)"/>
            <column name="product_name_rus" type="varchar(255)"/>
            <column name="device_type" type="varchar(50)"/>
            <column name="model" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="profiles_data" author="dzaitsev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="profiles_data"/>
            </not>
        </preConditions>
        <createTable tableName="profiles_data">
            <column name="profile_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="protocol" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="profile_data" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="scrape_interval" type="int4"/>
            <column name="scrape_timeout" type="int4"/>
        </createTable>
        <addPrimaryKey tableName="profiles_data" columnNames="profile_uid, protocol"/>
        <addForeignKeyConstraint baseTableName="profiles_data" baseColumnNames="profile_uid"
                                 constraintName="profile_data_profile_fk"
                                 referencedTableName="profiles"
                                 referencedColumnNames="uid" onUpdate="CASCADE" onDelete="CASCADE"/>
    </changeSet>
    <changeSet id="init_sql" author="dzaitsev">
        <sqlFile path="db/init.sql"/>
    </changeSet>
    <changeSet id="create_command_table" author="dzaitsev">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="commands"/>
            </not>
        </preConditions>

        <createTable tableName="commands">

            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="commandPK"/>
            </column>
            <column name="command_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean"/>

            <column name="body" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="profile_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="date_create" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="description" type="varchar(4000)"/>
            <column name="command_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="target" type="varchar(400)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="commands" indexName="commandUIdx" unique="true">
            <column name="command_type"/>
            <column name="profile_uid"/>
            <column name="command_name"/>
            <column name="target"/>
        </createIndex>
    </changeSet>
    <changeSet id="add_service_name" author="dzaitsev">
        <addColumn tableName="commands">
            <column name="service_name" type="varchar(200)"/>
        </addColumn>
    </changeSet>
    <changeSet id="add_rus_name" author="dzaitsev">
        <addColumn tableName="commands">
            <column name="rus_name" type="varchar(200)"/>
        </addColumn>
    </changeSet>
    <changeSet id="alert_rules" author="dzaitsev">
        <createTable tableName="alert_groups">
            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="alertGroupPK"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="group_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="date_create" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createTable tableName="alert_rules">
            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="alertRulePK"/>
            </column>
            <column name="rule_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="rule_expression" type="varchar(4000)">
                <constraints nullable="false"/>
            </column>
            <column name="severity" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="date_create" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="alert_rule_type" type="varchar(50)"/>
            <column name="is_prometheus_expression" type="boolean"/>
        </createTable>
        <createTable tableName="notification_rules">
            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="notificationRulePK"/>
            </column>
            <column name="notification_type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="notification_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="notification_description" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="notification_rule" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="fire_message_template" type="varchar(8000)">
                <constraints nullable="false"/>
            </column>
            <column name="resolve_message_template" type="varchar(8000)">
                <constraints nullable="false"/>
            </column>
            <column name="alert_delay" type="int4">
                <constraints nullable="false"/>
            </column>
            <column name="date_create" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="initial_delay" type="int4"/>
        </createTable>
        <createTable tableName="alert_rules_notifications">
            <column name="rule_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="notification_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="alert_rules_notifications" columnNames="notification_uid, rule_uid"/>

        <addForeignKeyConstraint baseTableName="alert_rules_notifications" baseColumnNames="rule_uid"
                                 constraintName="alert_rules_notifications_rule_fk"
                                 referencedTableName="alert_rules"
                                 referencedColumnNames="uid"/>
        <addForeignKeyConstraint baseTableName="alert_rules_notifications" baseColumnNames="notification_uid"
                                 constraintName="alert_rules_notifications_notification_fk"
                                 referencedTableName="notification_rules"
                                 referencedColumnNames="uid"/>

        <createTable tableName="alert_groups_notifications">
            <column name="group_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="notification_uid" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="alert_groups_notifications" columnNames="notification_uid, group_uid"/>
        <addForeignKeyConstraint baseTableName="alert_groups_notifications" baseColumnNames="group_uid"
                                 constraintName="alert_groups_notifications_rule_fk"
                                 referencedTableName="alert_groups"
                                 referencedColumnNames="uid"/>
        <addForeignKeyConstraint baseTableName="alert_groups_notifications" baseColumnNames="notification_uid"
                                 constraintName="alert_groups_notifications_notification_fk"
                                 referencedTableName="notification_rules"
                                 referencedColumnNames="uid"/>
        <createTable tableName="alert_groups_rules">
            <column name="group_uid" type="uuid"/>
            <column name="rule_uid" type="uuid"/>
        </createTable>
        <addPrimaryKey tableName="alert_groups_rules" columnNames="rule_uid, group_uid"/>
        <addForeignKeyConstraint baseTableName="alert_groups_rules" baseColumnNames="group_uid"
                                 constraintName="alert_groups_rules_groups_fk"
                                 referencedTableName="alert_groups"
                                 referencedColumnNames="uid"/>
        <addForeignKeyConstraint baseTableName="alert_groups_rules" baseColumnNames="rule_uid"
                                 constraintName="alert_groups_rules_rules_fk"
                                 referencedTableName="alert_rules"
                                 referencedColumnNames="uid"/>
        <sqlFile path="db/init_alerts.sql"/>
    </changeSet>
    <changeSet id="add_description_rus" author="dzaitsev">
        <addColumn tableName="commands">
            <column name="description_rus" type="varchar(400)"/>
        </addColumn>
    </changeSet>
    <changeSet id="add_is_favorite" author="dzaitsev">
        <addColumn tableName="commands">
            <column name="is_favorite" type="boolean"/>
        </addColumn>
    </changeSet>
    <changeSet id="create-license-table" author="developer">
        <createTable tableName="license">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="license_key" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="license_type" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expiration_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="max_activations" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="customer_email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="client_id" type="uuid"/>
        </createTable>

        <addDefaultValue tableName="license" columnName="status" defaultValue="ACTIVE"/>
        <addDefaultValue tableName="license" columnName="max_activations" defaultValue="1"/>
        <addDefaultValue tableName="license" columnName="creation_date" defaultValueComputed="CURRENT_TIMESTAMP"/>

        <createIndex tableName="license" indexName="idx_license_key">
            <column name="license_key"/>
        </createIndex>

        <createIndex tableName="license" indexName="idx_client_key">
            <column name="client_id"/>
        </createIndex>

        <createIndex tableName="license" indexName="idx_license_customer_email">
            <column name="customer_email"/>
        </createIndex>

        <createIndex tableName="license" indexName="idx_license_status">
            <column name="status"/>
        </createIndex>
        <createTable tableName="license_activation_history">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="license_id" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="hardware_fingerprint" type="VARCHAR(512)">
                <constraints nullable="true"/>
            </column>
            <column name="activation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="client_ip" type="VARCHAR(45)">
                <constraints nullable="true"/>
            </column>
            <column name="user_agent" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="application_version" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="activation_method" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="deactivation_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addDefaultValue tableName="license_activation_history" columnName="activation_date"
                         defaultValueComputed="CURRENT_TIMESTAMP"/>

        <addForeignKeyConstraint
                baseTableName="license_activation_history"
                baseColumnNames="license_id"
                constraintName="fk_license_activation_license"
                referencedTableName="license"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <createIndex tableName="license_activation_history" indexName="idx_activation_license_id">
            <column name="license_id"/>
        </createIndex>

        <createIndex tableName="license_activation_history" indexName="idx_activation_hardware_fp">
            <column name="hardware_fingerprint"/>
        </createIndex>

        <createIndex tableName="license_activation_history" indexName="idx_activation_date">
            <column name="activation_date"/>
        </createIndex>

        <createIndex tableName="license_activation_history" indexName="idx_activation_status">
            <column name="status"/>
        </createIndex>

        <createIndex tableName="license_activation_history" indexName="idx_activation_client_ip">
            <column name="client_ip"/>
        </createIndex>

        <createIndex tableName="license_activation_history" indexName="idx_activation_license_hardware_active">
            <column name="license_id"/>
            <column name="hardware_fingerprint"/>
        </createIndex>
        <createTable tableName="clients">
            <column name="uid" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="company_name" type="varchar(500)"/>
            <column name="public_key" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>